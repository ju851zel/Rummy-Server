# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET        /socket                    controllers.RummyController.socket
GET         /rules                   controllers.RummyController.rules
GET         /game                    controllers.RummyController.game
GET         /news                    controllers.RummyController.news
GET         /todo                    controllers.RummyController.todo
GET         /state                   controllers.RummyController.state
GET         /json                    controllers.RummyController.json
POST        /game                    controllers.RummyController.game


GET         /game/store              controllers.RummyController.storeFile
GET         /game/load               controllers.RummyController.loadFile

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)

