# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET        /createGame                   controllers.RummyController.createGame
GET        /loadFile                     controllers.RummyController.loadFile
GET        /finishNameInput              controllers.RummyController.finishNameInput
GET        /undo                         controllers.RummyController.undo
GET        /redo                         controllers.RummyController.redo
GET        /addPlayer/:name              controllers.RummyController.addPlayer(name:String)
GET        /switchToNextPlayer           controllers.RummyController.switchToNextPlayer
GET        /finishTurn                   controllers.RummyController.finishTurn
GET        /storeFile                    controllers.RummyController.storeFile
GET        /laydown/:tile                controllers.RummyController.laydown(tile: String)
GET        /moveTile/:tile1        controllers.RummyController.moveTile(tile1:String)
GET        /rules                        controllers.RummyController.rules
GET        /game                         controllers.RummyController.game

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)

